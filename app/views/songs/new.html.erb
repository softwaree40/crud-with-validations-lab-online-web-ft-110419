<h1>New form Song</h1>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for (@song) do |f| %>
<%= f.label 'Title' %><br>
<%= f.text_field :title %><br>
<%= f.label 'Song Released' %><br>
<%= f.check_box :released %><br>
<%= f.label 'Release Year' %><br>
<%= f.text_field :release_year %><br>
<%= f.label 'Artist Name' %><br>
<%= f.text_field :artist_name %><br>
<%= f.label 'Genre' %><br>
<%= f.text_field :genre %><br>
<%= f.submit %>
<% end %>
